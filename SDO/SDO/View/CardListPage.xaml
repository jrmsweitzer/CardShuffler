<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDO.View.CardListPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                <Entry Text="{Binding CardSearchFilterName}" Placeholder="Name" HorizontalOptions="FillAndExpand"/>
                <Entry Text="{Binding CardSearchFilterDescription}" Placeholder="Description" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                <Picker ItemsSource="{Binding SelectCardCategory}" 
                        SelectedItem="{Binding SelectedCardCategory}"
                        HorizontalOptions="FillAndExpand"/>
                <Picker ItemsSource="{Binding SelectCardType}" 
                        SelectedItem="{Binding SelectedCardType}"
                        HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <Picker ItemsSource="{Binding SelectCardAttribute}" SelectedItem="{Binding SelectedCardAttribute}" IsVisible="{Binding DisplayAttributeDropdown}"/>


            <ListView ItemsSource="{Binding FilteredCards}" HasUnevenRows="True" ItemTapped="ListView_ItemTapped" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="32">

                            <StackLayout Orientation="Horizontal" BackgroundColor="{Binding BackgroundColor}">
                                <Label Text="{Binding Card.Name}"/>
                                <Label Text="{Binding ShortDetailsString}" XAlign="End"/>
                            </StackLayout>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>